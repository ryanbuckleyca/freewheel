  <!-- bike details   -->

    <div class="bike-info-container" style="height: 200px">
       <!-- placeholder image - waiting for @bike.photo.key -->
       <div class="float-let">
        <img src="https://source.unsplash.com/random/300x200" alt="bike"
           style="width: 300px; height: 200px; vertical-align: top"
           class="rounded float-left">
       </div>
        <div class="bike-info float-left">
          <ul>
            <li><%= @bike.bike_type %></li>
            <li><%= @bike.brand %></li>
            <li><%= @bike.year %></li>
            <li><%= @bike.frame_size %></li>
            <li><%= @bike.seat_count %></li>
            <li><%= @bike.price %></li>
          </ul>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-4 mb-4">
      <button id="message" class="btn btn-primary">message user</button>
      <button id="checkout" class="btn btn-success ml-2" data-toggle="modal" data-target="#confirmationModal">checkout</button>
    </div>


<!-- confirmation page (modal) -->

  <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h2>Confirmation</h2>
        <p>Your rental request has been submitted. To check the
          status of your request, please visit your <a href="#">dashboard</a>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">close</button>
      </div>
    </div>
  </div>
</div>

    <!-- see more bikes -->

  <h2 class="mb-4 mt-4">Other bikes near you</h2>
    <ul>
      <% @bikes.each do |bike| %>
      <li>Type: <%= bike.bike_type %>
        Brand: <%= bike.brand %>
        Price: $<%= bike.price %>
      </li>
      <% end %>
    </ul>



