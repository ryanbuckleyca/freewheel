    <div class="col-12 col-6-md text-align-center">
      <div class="card row mb-4 px-3 mx-auto shadow-sm bg-white rounded" style="max-width: 550px">
        <div class="card-details m-3">
          <div class="align-center mt-3">
            <%= raw "<img src=\"https://source.unsplash.com/300x300/?" +
              @bike.bike_type.gsub(/\s/, ',').to_s +
              ",bicycle\" alt=\"bike\" width=\"225\"
              height=\"225\">" %>
          </div>
          <div class="px-3 mt-3">
            <h2 class="card-title">
            <%= @bike.brand %>
            <%= @bike.bike_type  %>
            <small>(<%= @bike.year %>)</small>
            </h2>
            <div>
            <i class="fas fa-map-marker-alt red"></i> <%= @bike.location %><br>
            <i class="fas fa-arrows-alt-v"></i> <%= @bike.frame_size %>cm frame size<br>
            <% if @bike.seat_count == 1 %>
              <i class="fas fa-user"></i> 1 seater<br>
            <% else %>
              <i class="fas fa-user-friends"></i> 2 seater<br>
            <% end %><br>
              <strong class="blue">$<%= @bike.price %>/hr</strong>
          </div>
        </div>

        </div>

        <div class="m-3">
          <!--  using flatpickr for this
                config in application.js / application.css -->
          <%= simple_form_for [ @bike, @rental ] do |f| %>
            <%= f.input :rental_start,
                as: :string %>
            <%= f.input :rental_end,
                as: :string %>
            <%= f.input :message %>
            <%= f.button :submit, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

      <div id="map"
       style="width: 100%; height: 400px;"
       data-markers="<%= @marker.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>


    <!-- see more bikes -->

    <h2 class="mb-4 mt-4">Other bikes near you</h2>

    <%= render 'shared/bikesgrid' %>
  </div>
</div>


