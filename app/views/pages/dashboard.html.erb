<h1>this is the dashboard page</h1>

<h2> My profile</h2>
   <%= @user.first_name + @user.last_name + @user.email + @user.phone_number%>

<h2> My bike </h2>
<div>
  <% @my_bikes.each do |bike|%>
   <%= bike.brand%>
  <% end %>
</div>

<h2> Bike I Rent</h2>
<div>
  <% @bikes_i_rent.each do |bike|%>
   <%= bike.brand%>
  <% end %>
</div>

<h2> My rentals</h2>
<div>
  <% @my_rentals.each do |rental|%>
   <%= "time: #{rental.rental_start}, time #{rental.rental_end}" %>
    <%= rental.bike.brand%>
  <% end %>
</div>

<h2> My Rental request received</h2>
<div>
  <% @rental_request_received.each do |rental|%>
   <%= "time: #{rental.rental_start}, time #{rental.rental_end}" %>
  <% end %>
</div>

